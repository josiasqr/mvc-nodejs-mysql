doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    // Bootstrap CSS
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
    // Bootstrap icons
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css")

    title Edit Employee
  body
    .container.mt-5
      .row
        .col-md-4
        .col-md-4
          form(action=`/employee/${data.employee_id}?_method=put` method="post")
            .mb-3
              label.form-label Name
              input.form-control(type="text" name="name" value=data.name placeholder="Name")
            .mb3
              label.form-label Last Name
              input.form-control(type="text" name="last_name" value=data.last_name placeholder="Last Name")
            .mb-3
              label.form-label DNI
              input.form-control(type="number" name="dni" value=data.dni placeholder="DNI")
            .mb-3
              label.form-label Phone
              input.form-control(type="number" name="phone" value=data.phone placeholder="Phone")
            .d-grid.gap-2
              input.btn.btn-primary(type="submit" value="Update") 

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js")
