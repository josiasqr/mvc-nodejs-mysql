doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    // Bootstrap CSS
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
    // Bootstrap icons
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css")

    title Crud - nodejs and mysql
  body
    h1.text-center.mt-3 Application CRUD with nodejs and mysql
    .container
      .row.mt-5
        .col-sm-12.col-md-12.col-lg-12.col-xl-6.mb-5
          form(action="/employee/create" method="post")
            .mb-3
              label.form-label Name
              input.form-control(type="text" name="name" placeholder="Name")
            .mb3
              label.form-label Last Name
              input.form-control(type="text" name="last_name" placeholder="Last Name")
            .mb-3
              label.form-label DNI
              input.form-control(type="number" name="dni" value="67653865" placeholder="DNI")
            .mb-3
              label.form-label Phone
              input.form-control(type="number" name="phone" value="987654321" placeholder="Phone")
            .d-grid.gap-2
              input.btn.btn-primary(type="submit" value="Send") 
        .col-sm-12.col-md-12.col-lg-12.col-xl-6
          table.table
            thead
              tr
                th(scope="col") #
                th(scope="col") Name
                th(scope="col") Last Name
                th(scope="col") DNI
                th(scope="col") Phone
            tbody
              each row, index in data
                tr
                  th(scope="col") #{index+1}
                  td #{row.name}
                  td #{row.last_name}
                  td #{row.dni}
                  td #{row.phone}
                  td
                    form(action=`/employee/${row.employee_id}?_method=delete` method="post")
                      a#edit.btn.btn-warning.me-1(href=`/employee/${row.employee_id}`)
                        i.bi.bi-pencil
                      button.btn.btn-danger(type="submit")
                        i.bi.bi-trash


    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js")
    script(src="code.js")
